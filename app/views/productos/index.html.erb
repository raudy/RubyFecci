<p id="notice"><%= notice %></p>

<h1>Listando Productos</h1>
<br>
<table>
  <thead>
    <tr>
    <td class="first">
      <th>Cod</th>
      <th>Nombre</th>
      <th>Categoria</th>
      <th colspan="3"></th>
      </td>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
      <td class="first">
        <td><%= producto.cod %></td>
        <td><%= producto.nombre %></td>
        <td><%= producto.categoria_id %></td>
        <td><%= link_to 'Mostrar', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_producto_path %>
