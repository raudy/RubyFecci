<p id="notice"><%= notice %></p>

<h1>Listando Productos</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Cod</th>
      <th>Nombre</th>
      <th>Categoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.cod %></td>
        <td><%= producto.nombre %></td>
        <td><%= producto.categoria_id %></td>
        <td><%= link_to 'Mostrar', producto %></td>
        <td><%= link_to 'Editar', edit_producto_path(producto) %></td>
        <td><%= link_to 'Eliminar', producto, method: :delete, data: { confirm: '¿Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Producto', new_producto_path %>
