<p id="notice"><%= notice %></p>

<h1>Listando Categoria</h1>

<table>
  <thead>
    <tr>
      <th>Cod</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.cod %></td>
        <td><%= categorium.nombre %></td>
        <td><%= link_to 'Mostrar', categorium %></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium) %></td>
        <td><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Esta Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

