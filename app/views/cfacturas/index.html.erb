<p id="notice"><%= notice %></p>

<h1>Listando Cfacturas</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Fecha</th>
      <th>Mneto</th>
      <th>Mbruto</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @cfacturas.each do |cfactura| %>
      <tr>
        <td><%= cfactura.num %></td>
        <td><%= cfactura.fecha %></td>
        <td><%= cfactura.mneto %></td>
        <td><%= cfactura.mbruto %></td>
        <td><%= cfactura.cliente_id %></td>
        <td><%= link_to 'Mostrar', cfactura %></td>
        <td><%= link_to 'Editar', edit_cfactura_path(cfactura) %></td>
        <td><%= link_to 'Eliminar', cfactura, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

